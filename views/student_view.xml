<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="validations_app.student_model_list">
      <field name="name">Student List</field>
      <field name="model">validations_app.student_model</field>
      <field name="arch" type="xml">
        <tree decoration-danger="age &lt; 18">
          
          <field name="name"/>
          <field name="age"/>
          <field name="city"/>
          <field name="email"/>

        </tree>
      </field>
    </record>

    <!-- FORM -->

    <record model="ir.ui.view" id="validations_app.student_model_form">
      <field name="name">Student Form</field>
      <field name="model">validations_app.student_model</field>
      <field name="arch" type="xml">
        <form string="Student">
          <header>
            <!-- Botones aquÃ­ -->
            <button name="generatePassword" type="object" string="Generate Password" class="oe_"/>
          </header>
          <group>
            <group>
              <h1>Personal Data</h1>
              <field name="photo"/>
              <field name ="name"/>
              <field name="password"/>
              <field name="age"/>
            </group>

            <group>
              <h1>Aditional Data</h1>
              <field name="validations"/>
              <field name="city"/>
              <field name="region"/>
              <field name="email"/>
            </group>

          </group>
        </form>
      </field>
    </record>

    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="validations_app.action_window_student">
      <field name="name">Student Window</field>
      <field name="res_model">validations_app.student_model</field>
      <field name="view_mode">tree,form</field>
    </record>

  </data>
</odoo>