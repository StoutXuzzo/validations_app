<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="validations_app.course_model_list">
      <field name="name">Course List</field>
      <field name="model">validations_app.course_model</field>
      <field name="arch" type="xml">
        <tree>
          
          <field name="name"/>
          <field name="description"/>

        </tree>
      </field>
    </record>

    <!-- FORM -->

    <record model="ir.ui.view" id="validations_app.course_model_form">
      <field name="name">Course Form</field>
      <field name="model">validations_app.course_model</field>
      <field name="arch" type="xml">
        <form string="course">
          <header>
            <!-- Botones aquÃ­ 
            <button name="generatePassword" type="object" string="Generate Password" class="oe_"/>
          --></header>
          <group>

            <group>

            <field name ="name"/>
            <field name="description"/>

          </group>

          <group>

            <field name ="modules"/>

          </group>

          </group>
        </form>
      </field>
    </record>

    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="validations_app.action_window_course">
      <field name="name">Course Window</field>
      <field name="res_model">validations_app.course_model</field>
      <field name="view_mode">tree,form</field>
    </record>

  </data>
</odoo>