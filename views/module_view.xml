<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="validations_app.module_model_list">
      <field name="name">Module List</field>
      <field name="model">validations_app.module_model</field>
      <field name="arch" type="xml">
        <tree>

          <field name="name"/>
          <field name="hours"/>
          <field name="course"/>

        </tree>
      </field>
    </record>

    <!-- FORM -->

    <record model="ir.ui.view" id="validations_app.module_model_form">
      <field name="name">Module Form</field>
      <field name="model">validations_app.module_model</field>
      <field name="arch" type="xml">
        <form string="module">
          <header>
            <!-- Botones aquÃ­ 
            <button name="generatePassword" type="object" string="Generate Password" class="oe_"/>
          -->          </header>
          <group>
            <group>
            
              <field name ="name"/>
              <field name="hours"/>
              <field name="course"/>

            </group>
            <group>
              
              <field name="validations"/>
              <field name="description"/>
            </group>

          </group>
        </form>
      </field>
    </record>

    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="validations_app.action_window_module">
      <field name="name">Module Window</field>
      <field name="res_model">validations_app.module_model</field>
      <field name="view_mode">tree,form</field>
    </record>

  </data>
</odoo>