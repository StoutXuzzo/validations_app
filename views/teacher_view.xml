<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="validations_app.teacher_model_list">
      <field name="name">Teacher List</field>
      <field name="model">validations_app.teacher_model</field>
      <field name="arch" type="xml">
        <tree>
          
          <field name="name"/>
          <field name="surname"/>
          <field name="dni"/>

        </tree>
      </field>
    </record>

    <!-- FORM -->

    <record model="ir.ui.view" id="validations_app.teacher_model_form">
      <field name="name">Teacher Form</field>
      <field name="model">validations_app.teacher_model</field>
      <field name="arch" type="xml">
        <form string="teacher">
          <header>

          </header>
          <group>
            <group>
              <h1>Personal Data</h1>
              <field name="photo"/>
              <field name ="name"/>
              <field name="surname"/>
              <field name="dni"/>
            </group>

            <group>
              <h1>Aditional Data</h1>
              <field name="students"/>
            </group>

          </group>
        </form>
      </field>
    </record>

    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="validations_app.action_window_teacher">
      <field name="name">teacher Window</field>
      <field name="res_model">validations_app.teacher_model</field>
      <field name="view_mode">tree,form</field>
    </record>

  </data>
</odoo>